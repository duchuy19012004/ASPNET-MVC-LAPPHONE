@model phonev2.Models.LinhKien
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh Sửa Linh Kiện";
}

@section PageActions {
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay Lại Danh Sách
        </a>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Thông Báo
                </h4>
            </div>
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h5 class="text-warning mb-3">Trang này đã được thay thế bằng Modal</h5>
                <p class="text-muted mb-4">
                    Để chỉnh sửa linh kiện, vui lòng sử dụng nút "Chỉnh sửa" trong danh sách linh kiện.
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Thông tin linh kiện:</h6>
                        <p><strong>@Model.TenLinhKien</strong></p>
                        <p class="text-muted">Mã: #@Model.MaLinhKien</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Trạng thái:</h6>
                        <span class="badge @(Model.TrangThai ? "bg-success" : "bg-secondary")">
                            @Model.TrangThaiText
                        </span>
                        <br>
                        <span class="@Model.TonKhoCssClass mt-2 d-inline-block">
                            Tồn kho: @Model.SoLuongTon cái
                        </span>
                    </div>
                </div>
                <hr>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Quay Lại Danh Sách
                </a>
            </div>
        </div>
    </div>
</div>