@model phonev2.Models.LinhKien
@{
    Layout = "_AdminLayout";
}

@section PageActions {
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.MaLinhKien" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Chỉnh Sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.MaLinhKien" class="btn btn-danger">
            <i class="fas fa-trash me-1"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay Lại
        </a>
    </div>
}

<div class="row">
    <!-- Main Info Card -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-microchip me-2"></i>
                    @Model.TenLinhKien
                </h4>
                <small class="opacity-75">Mã linh kiện: #@Model.MaLinhKien</small>
            </div>
            <div class="card-body">
                <!-- Component Info Grid -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-tag me-2"></i>Giá Bán
                        </h6>
                        <h3 class="text-success mb-0">@Model.GiaBanText</h3>
                        <small class="text-muted">Giá nhập: @Model.GiaNhapText</small>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-boxes me-2"></i>Tồn Kho
                        </h6>
                        <h3 class="mb-0">
                            <span class="@Model.TonKhoCssClass">@Model.SoLuongTon</span>
                        </h3>
                        <small class="text-muted">@Model.TrangThaiTonKho</small>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-dollar-sign me-2"></i>Lợi Nhuận
                        </h6>
                        <h3 class="@(Model.LoiNhuan > 0 ? "text-success" : Model.LoiNhuan < 0 ? "text-danger" : "text-muted") mb-0">
                            @Model.LoiNhuanText
                        </h3>
                        <small class="text-muted">(@Model.TyLeLoiNhuan%)</small>
                    </div>
                </div>

                <!-- Category and Brand -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <span class="badge bg-info fs-6 px-3 py-2">
                            <i class="fas fa-tag me-1"></i>
                            @Model.LoaiLinhKien?.TenLoaiLinhKien
                        </span>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-industry me-2"></i>Hãng Sản Xuất
                        </h6>
                        @if (!string.IsNullOrEmpty(Model.HangSanXuat))
                        {
                            <span class="badge bg-secondary fs-6 px-3 py-2">
                                <i class="fas fa-building me-1"></i>
                                @Model.HangSanXuat
                            </span>
                        }
                        else
                        {
                            <em class="text-muted">Chưa xác định hãng sản xuất</em>
                        }
                    </div>
                </div>

                <!-- Specifications -->
                @if (!string.IsNullOrEmpty(Model.ThongSoKyThuat))
                {
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-cogs me-2"></i>Thông Số Kỹ Thuật
                        </h6>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0 lh-lg">@Model.ThongSoKyThuat</p>
                        </div>
                    </div>
                }

                <!-- Status -->
                <div class="mb-4">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-toggle-on me-2"></i>Trạng Thái Bán Hàng
                    </h6>
                    <span class="badge @(Model.TrangThai ? "bg-success" : "bg-secondary") fs-6 px-3 py-2">
                        <i class="fas @(Model.TrangThai ? "fa-check-circle" : "fa-pause-circle") me-2"></i>
                        @Model.TrangThaiText
                    </span>
                </div>

                <!-- Product Preview Card -->
                <div class="mb-4">
                    <h6 class="text-muted mb-3">
                        <i class="fas fa-eye me-2"></i>Hiển Thị Cho Khách Hàng
                    </h6>
                    <div class="card border-2 @(Model.TrangThai ? "border-success" : "border-secondary")">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="card-title mb-2">
                                        <i class="fas fa-microchip me-2 text-primary"></i>
                                        @Model.TenLinhKien
                                    </h5>
                                    @if (!string.IsNullOrEmpty(Model.HangSanXuat))
                                    {
                                        <p class="card-text text-muted mb-1">
                                            <i class="fas fa-industry me-1"></i>
                                            @Model.HangSanXuat
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ThongSoKyThuat))
                                    {
                                        <p class="card-text text-muted mb-0">
                                            @(Model.ThongSoKyThuat.Length > 100 ? Model.ThongSoKyThuat.Substring(0, 100) + "..." : Model.ThongSoKyThuat)
                                        </p>
                                    }
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="price-display">
                                        <h4 class="text-success mb-1">@Model.GiaBanText</h4>
                                        <span class="@Model.TonKhoCssClass">
                                            <i class="fas fa-boxes me-1"></i>
                                            Còn @Model.SoLuongTon
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-3 text-center">
                                    <div class="category-display">
                                        <span class="badge bg-info fs-6 px-3 py-2 mb-2">
                                            @Model.LoaiLinhKien?.TenLoaiLinhKien
                                        </span>
                                        @if (Model.LoaiLinhKien?.ThoiGianBaoHanh.HasValue == true && Model.LoaiLinhKien.ThoiGianBaoHanh > 0)
                                        {
                                            <br>
                                            <small class="text-success">
                                                <i class="fas fa-shield-alt me-1"></i>
                                                BH: @Model.LoaiLinhKien.ThoiGianBaoHanh tháng
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profit Analysis -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Phân Tích Lợi Nhuận
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">@Model.GiaNhapText</h4>
                            <small class="text-muted">Giá nhập</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-success mb-1">@Model.GiaBanText</h4>
                            <small class="text-muted">Giá bán</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="@(Model.LoiNhuan > 0 ? "text-success" : "text-danger") mb-1">@Model.LoiNhuanText</h4>
                            <small class="text-muted">Lợi nhuận/cái</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-warning mb-1">@((Model.LoiNhuan * Model.SoLuongTon).ToString("N0")) VNĐ</h4>
                        <small class="text-muted">Lợi nhuận tổng</small>
                    </div>
                </div>
                
                @if (Model.LoiNhuan > 0)
                {
                    <hr class="my-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="mb-3">Tỷ lệ lợi nhuận: <strong class="text-success">@Model.TyLeLoiNhuan%</strong></h6>
                            <div class="progress mb-2" style="height: 20px;">
                                <div class="progress-bar @(Model.TyLeLoiNhuan < 20 ? "bg-danger" : Model.TyLeLoiNhuan < 50 ? "bg-warning" : "bg-success")" 
                                     style="width: @Math.Min(Model.TyLeLoiNhuan, 100)%">
                                    @Model.TyLeLoiNhuan%
                                </div>
                            </div>
                            <small class="text-muted">
                                @if (Model.TyLeLoiNhuan < 20)
                                {
                                    <text>Lợi nhuận thấp</text>
                                }
                                else if (Model.TyLeLoiNhuan < 50)
                                {
                                    <text>Lợi nhuận trung bình</text>
                                }
                                else
                                {
                                    <text>Lợi nhuận cao</text>
                                }
                            </small>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-3">Đánh giá kinh doanh:</h6>
                            @if (Model.TyLeLoiNhuan >= 30 && Model.SoLuongTon > 10)
                            {
                                <div class="alert alert-success alert-sm">
                                    <i class="fas fa-thumbs-up me-2"></i>
                                    Sản phẩm kinh doanh tốt
                                </div>
                            }
                            else if (Model.TyLeLoiNhuan < 10)
                            {
                                <div class="alert alert-warning alert-sm">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Nên xem xét tăng giá bán
                                </div>
                            }
                            else if (Model.SoLuongTon == 0)
                            {
                                <div class="alert alert-danger alert-sm">
                                    <i class="fas fa-times-circle me-2"></i>
                                    Cần nhập thêm hàng
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info alert-sm">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Sản phẩm ổn định
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Transaction History (Placeholder) -->
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>
                    Lịch Sử Giao Dịch
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Chưa có lịch sử giao dịch</h6>
                    <p class="text-muted mb-0">Lịch sử nhập/xuất kho và bán hàng sẽ hiển thị ở đây</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar Info -->
    <div class="col-lg-4">
        <!-- Quick Info -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Thông Tin Nhanh
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Mã linh kiện:</span>
                    <strong>#@Model.MaLinhKien</strong>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ngày thêm:</span>
                    <strong>@Model.NgayTao.ToString("dd/MM/yyyy")</strong>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Thời gian thêm:</span>
                    <strong>@Model.NgayTao.ToString("HH:mm")</strong>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Độ dài tên:</span>
                    <strong>@Model.TenLinhKien.Length ký tự</strong>
                </div>
                @if (!string.IsNullOrEmpty(Model.ThongSoKyThuat))
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Độ dài thông số:</span>
                        <strong>@Model.ThongSoKyThuat.Length ký tự</strong>
                    </div>
                }
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Giá trị tồn kho:</span>
                    <strong class="text-primary">@((Model.GiaNhap * Model.SoLuongTon).ToString("N0")) VNĐ</strong>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>
                    Thao Tác Nhanh
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary toggle-status" 
                            data-id="@Model.MaLinhKien" 
                            data-status="@Model.TrangThai.ToString().ToLower()">
                        <i class="fas @(Model.TrangThai ? "fa-pause" : "fa-play") me-2"></i>
                        @(Model.TrangThai ? "Ngừng bán" : "Bắt đầu bán")
                    </button>
                    
                    <button type="button" class="btn btn-outline-success" onclick="updateStock()">
                        <i class="fas fa-plus me-2"></i>
                        Cập Nhật Tồn Kho
                    </button>
                    
                    <a asp-action="Create" class="btn btn-outline-info">
                        <i class="fas fa-copy me-2"></i>
                        Tạo Linh Kiện Tương Tự
                    </a>
                    
                    <button type="button" class="btn btn-outline-secondary" onclick="printComponentInfo()">
                        <i class="fas fa-print me-2"></i>
                        In Thông Tin
                    </button>
                    
                    <button type="button" class="btn btn-outline-warning" onclick="shareComponent()">
                        <i class="fas fa-share me-2"></i>
                        Chia Sẻ
                    </button>
                </div>
            </div>
        </div>

        <!-- Stock Alert -->
        @if (Model.SoLuongTon <= 5)
        {
            <div class="card shadow mb-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Cảnh Báo Tồn Kho
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.SoLuongTon == 0)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-times-circle me-2"></i>
                            <strong>Hết hàng!</strong> Cần nhập thêm ngay.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Sắp hết hàng!</strong> Còn @Model.SoLuongTon cái.
                        </div>
                    }
                    <div class="d-grid">
                        <button type="button" class="btn btn-warning" onclick="quickRestock()">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Nhập Hàng Nhanh
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Related Components (Placeholder) -->
        <div class="card shadow">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-link me-2"></i>
                    Linh Kiện Liên Quan
                </h6>
            </div>
            <div class="card-body">
                <p class="text-muted text-center mb-0">
                    <i class="fas fa-search me-1"></i>
                    Tìm linh kiện cùng loại: @Model.LoaiLinhKien?.TenLoaiLinhKien
                </p>
                <div class="d-grid mt-2">
                    <a asp-action="Index" asp-route-categoryFilter="@Model.MaLoaiLinhKien" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>
                        Xem Linh Kiện Cùng Loại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Status AJAX
        $('.toggle-status').on('click', function() {
            const btn = $(this);
            const id = btn.data('id');
            
            btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...');
            
            $.post('@Url.Action("ToggleStatus")', { id: id })
                .done(function(response) {
                    if (response.success) {
                        location.reload(); // Reload to update all status displays
                    } else {
                        alert('Có lỗi xảy ra: ' + response.message);
                        btn.prop('disabled', false);
                    }
                })
                .fail(function() {
                    alert('Không thể kết nối đến server!');
                    btn.prop('disabled', false);
                });
        });

        // Update Stock function
        function updateStock() {
            const action = prompt('Chọn hành động:\n1. Cộng thêm (nhập "add")\n2. Trừ bớt (nhập "subtract")\n3. Đặt lại (nhập "set")', 'add');
            if (!action || !['add', 'subtract', 'set'].includes(action)) return;
            
            const quantity = prompt('Nhập số lượng:', '1');
            if (!quantity || isNaN(quantity) || parseInt(quantity) < 0) return;
            
            $.post('@Url.Action("UpdateStock")', { 
                id: @Model.MaLinhKien, 
                quantity: parseInt(quantity), 
                action: action 
            })
            .done(function(response) {
                if (response.success) {
                    alert(`Đã cập nhật tồn kho thành công! Số lượng mới: ${response.newStock}`);
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + response.message);
                }
            })
            .fail(function() {
                alert('Không thể kết nối đến server!');
            });
        }

        // Quick Restock function
        function quickRestock() {
            const quantity = prompt('Nhập số lượng muốn nhập thêm:', '10');
            if (!quantity || isNaN(quantity) || parseInt(quantity) <= 0) return;
            
            $.post('@Url.Action("UpdateStock")', { 
                id: @Model.MaLinhKien, 
                quantity: parseInt(quantity), 
                action: 'add' 
            })
            .done(function(response) {
                if (response.success) {
                    alert(`Đã nhập thêm ${quantity} cái. Tồn kho mới: ${response.newStock}`);
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + response.message);
                }
            })
            .fail(function() {
                alert('Không thể kết nối đến server!');
            });
        }
        
        // Print function
        function printComponentInfo() {
            const printContent = `
                <h2>Thông Tin Linh Kiện</h2>
                <p><strong>Mã:</strong> #@Model.MaLinhKien</p>
                <p><strong>Tên:</strong> @Model.TenLinhKien</p>
                <p><strong>Loại:</strong> @Model.LoaiLinhKien?.TenLoaiLinhKien</p>
                <p><strong>Hãng:</strong> @(Model.HangSanXuat ?? "Chưa có")</p>
                <p><strong>Giá nhập:</strong> @Model.GiaNhapText</p>
                <p><strong>Giá bán:</strong> @Model.GiaBanText</p>
                <p><strong>Tồn kho:</strong> @Model.SoLuongTon cái</p>
                <p><strong>Lợi nhuận:</strong> @Model.LoiNhuanText (@Model.TyLeLoiNhuan%)</p>
                <p><strong>Trạng thái:</strong> @Model.TrangThaiText</p>
                @if (!string.IsNullOrEmpty(Model.ThongSoKyThuat))
                {
                    <text><p><strong>Thông số:</strong> @Html.Raw(Model.ThongSoKyThuat.Replace("\n", "<br>"))</p></text>
                }
                <p><strong>Ngày thêm:</strong> @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</p>
            `;
            
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <html>
                    <head>
                        <title>Thông Tin Linh Kiện - @Model.TenLinhKien</title>
                        <style>
                            body { font-family: Arial, sans-serif; margin: 20px; }
                            h2 { color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px; }
                            p { margin: 10px 0; }
                            strong { color: #333; }
                        </style>
                    </head>
                    <body>
                        ${printContent}
                    </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.print();
        }
        
        // Share function
        function shareComponent() {
            const componentInfo = `Linh kiện: @Model.TenLinhKien
Loại: @Model.LoaiLinhKien?.TenLoaiLinhKien
Hãng: @(Model.HangSanXuat ?? "Chưa có")
Giá: @Model.GiaBanText
Tồn kho: @Model.SoLuongTon cái
Trạng thái: @Model.TrangThaiText`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Linh Kiện - @Model.TenLinhKien',
                    text: componentInfo
                });
            } else {
                // Fallback: copy to clipboard
                navigator.clipboard.writeText(componentInfo).then(function() {
                    alert('Đã sao chép thông tin linh kiện vào clipboard!');
                }).catch(function() {
                    // Fallback for older browsers
                    const textArea = document.createElement('textarea');
                    textArea.value = componentInfo;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    alert('Đã sao chép thông tin linh kiện vào clipboard!');
                });
            }
        }
    </script>
}