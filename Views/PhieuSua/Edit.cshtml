@model phonev2.Models.ViewModels.PhieuSuaEditViewModel
@using phonev2.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
}

<style>
    .is-invalid {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
    }
    
    .form-label .text-danger {
        font-weight: bold;
    }
    
    .btn:disabled {
        cursor: not-allowed;
    }
    
    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
    }
</style>

<div class="modal-header bg-warning text-dark">
    <h5 class="modal-title"><i class="fas fa-edit"></i> Chỉnh sửa Phiếu Sửa #@Model.PhieuSua.MaPhieuSua</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="Edit" method="post" id="edit-form-@Model.PhieuSua.MaPhieuSua">
    <div class="modal-body">
        <input type="hidden" asp-for="PhieuSua.MaPhieuSua" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin cơ bản</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="PhieuSua.NgaySua" class="form-label">Ngày Sửa <span class="text-danger">*</span></label>
                            <input asp-for="PhieuSua.NgaySua" class="form-control" type="date" min="2020-01-01" max="2030-12-31" required />
                            <span asp-validation-for="PhieuSua.NgaySua" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.NgayHenTra" class="form-label">Ngày Hẹn Trả</label>
                            <input asp-for="PhieuSua.NgayHenTra" class="form-control" type="date" min="2020-01-01" max="2030-12-31" id="ngayHenTra" />
                            <span asp-validation-for="PhieuSua.NgayHenTra" class="text-danger"></span>
                            <small class="text-muted">Ngày hẹn trả phải lớn hơn hoặc bằng ngày sửa</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.NgayTraThucTe" class="form-label">Ngày Trả Thực Tế</label>
                            <input asp-for="PhieuSua.NgayTraThucTe" class="form-control" type="date" readonly 
                                   value="@(Model.PhieuSua.NgayTraThucTe?.ToString("yyyy-MM-dd"))" 
                                   style="background-color: #f8f9fa;" />
                            <small class="text-muted">Tự động cập nhật khi chuyển trạng thái thành "Hoàn thành"</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.MaKhachHang" class="form-label">Khách Hàng <span class="text-danger">*</span></label>
                            <select asp-for="PhieuSua.MaKhachHang" class="form-select" asp-items="Model.KhachHangList" required>
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                            <span asp-validation-for="PhieuSua.MaKhachHang" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.MaNhanVien" class="form-label">Nhân Viên <span class="text-danger">*</span></label>
                            <select asp-for="PhieuSua.MaNhanVien" class="form-select" asp-items="Model.NhanVienList" required>
                                <option value="">-- Chọn nhân viên --</option>
                            </select>
                            <span asp-validation-for="PhieuSua.MaNhanVien" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.TrangThai" class="form-label">Trạng Thái</label>
                            <select asp-for="PhieuSua.TrangThai" class="form-select">
                                <option value="0" selected="@(Model.PhieuSua.TrangThai == TrangThaiPhieuSua.TiepNhan)">
                                    <i class="fas fa-clipboard-list"></i> Tiếp nhận
                                </option>
                                <option value="1" selected="@(Model.PhieuSua.TrangThai == TrangThaiPhieuSua.DangSua)">
                                    <i class="fas fa-tools"></i> Đang sửa
                                </option>
                                <option value="2" selected="@(Model.PhieuSua.TrangThai == TrangThaiPhieuSua.HoanThanh)">
                                    <i class="fas fa-check-circle"></i> Hoàn thành
                                </option>
                                <option value="3" selected="@(Model.PhieuSua.TrangThai == TrangThaiPhieuSua.Huy)">
                                    <i class="fas fa-times-circle"></i> Hủy
                                </option>
                            </select>
                            <span asp-validation-for="PhieuSua.TrangThai" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhieuSua.GhiChu" class="form-label">Ghi Chú</label>
                            <textarea asp-for="PhieuSua.GhiChu" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                            <span asp-validation-for="PhieuSua.GhiChu" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-tools"></i> Dịch vụ đã chọn</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.PhieuSua.ChiTietPhieuSuas != null && Model.PhieuSua.ChiTietPhieuSuas.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tên Dịch Vụ</th>
                                            <th class="text-end">Giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var dv in Model.PhieuSua.ChiTietPhieuSuas)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-info text-dark">
                                                        <i class="fas fa-wrench"></i> @dv.DichVu?.TenDichVu
                                                    </span>
                                                </td>
                                                <td class="text-end">@(dv.DichVu?.GiaDichVu.ToString("N0") ?? "0") VNĐ</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">
                                <i class="fas fa-exclamation-circle"></i> Chưa có dịch vụ nào
                            </p>
                        }
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-microchip"></i> Linh kiện đã chọn</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.PhieuSua.ChiTietLinhKiens != null && Model.PhieuSua.ChiTietLinhKiens.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tên Linh Kiện</th>
                                            <th class="text-center">SL</th>
                                            <th class="text-end">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var lk in Model.PhieuSua.ChiTietLinhKiens)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-microchip"></i> @lk.LinhKien?.TenLinhKien
                                                    </span>
                                                </td>
                                                <td class="text-center">@lk.SoLuong</td>
                                                <td class="text-end">@(((lk.LinhKien?.GiaBan ?? 0) * lk.SoLuong).ToString("N0")) VNĐ</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">
                                <i class="fas fa-exclamation-circle"></i> Chưa có linh kiện nào
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <hr class="my-3" />
        
        @{
            decimal tongTienDichVu = Model.PhieuSua.ChiTietPhieuSuas?.Sum(dv => dv.DichVu?.GiaDichVu ?? 0) ?? 0;
            decimal tongTienLinhKien = Model.PhieuSua.ChiTietLinhKiens?.Sum(lk => (lk.LinhKien?.GiaBan ?? 0) * lk.SoLuong) ?? 0;
            decimal tongTien = tongTienDichVu + tongTienLinhKien;
        }
        
        <div class="alert alert-info mb-0">
            <div class="row text-center">
                <div class="col-md-4">
                    <h6 class="mb-1"><i class="fas fa-tools text-primary"></i> Dịch vụ</h6>
                    <span class="fs-6 fw-bold text-primary">@tongTienDichVu.ToString("N0") VNĐ</span>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-1"><i class="fas fa-microchip text-success"></i> Linh kiện</h6>
                    <span class="fs-6 fw-bold text-success">@tongTienLinhKien.ToString("N0") VNĐ</span>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-1"><i class="fas fa-coins text-danger"></i> Tổng cộng</h6>
                    <span class="fs-5 fw-bold text-danger">@tongTien.ToString("N0") VNĐ</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal-footer bg-light">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Hủy
        </button>
        <button type="submit" class="btn btn-warning" id="submit-btn-@Model.PhieuSua.MaPhieuSua">
            <i class="fas fa-save"></i> Cập nhật
        </button>
    </div>
</form>

<script>
    // Handle form submission
    $('#edit-form-@Model.PhieuSua.MaPhieuSua').on('submit', function(e) {
        e.preventDefault();
        var form = $(this);
        var submitBtn = $('#submit-btn-@Model.PhieuSua.MaPhieuSua');
        
        // Disable submit button to prevent double submission
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang cập nhật...');
        
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    // Show success message
                    alert('Cập nhật phiếu sửa thành công!');
                    $('#phieusua-edit-modal').modal('hide');
                    location.reload(); // Reload page to show updated data
                } else {
                    // Show error message
                    alert('Có lỗi xảy ra: ' + response.message);
                    submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');
                }
            },
            error: function(xhr, status, error) {
                console.log('AJAX Error:', xhr.responseText);
                
                // Try to parse error response
                try {
                    var errorResponse = JSON.parse(xhr.responseText);
                    if (errorResponse.message) {
                        alert('Có lỗi xảy ra: ' + errorResponse.message);
                    } else {
                        alert('Có lỗi xảy ra khi cập nhật phiếu sửa!');
                    }
                } catch (e) {
                    // If not JSON, show generic error
                    alert('Có lỗi xảy ra khi cập nhật phiếu sửa! Vui lòng thử lại.');
                }
                
                submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');
            }
        });
    });
    
    // Add validation before submit
    $('#edit-form-@Model.PhieuSua.MaPhieuSua').on('submit', function(e) {
        var ngaySua = $('input[name="PhieuSua.NgaySua"]').val();
        var maKhachHang = $('select[name="PhieuSua.MaKhachHang"]').val();
        var maNhanVien = $('select[name="PhieuSua.MaNhanVien"]').val();
        var isValid = true;
        var errorMessages = [];
        
        // Clear previous error highlights
        $('.form-control, .form-select').removeClass('is-invalid');
        
        if (!ngaySua) {
            $('input[name="PhieuSua.NgaySua"]').addClass('is-invalid');
            errorMessages.push('Vui lòng chọn ngày sửa!');
            isValid = false;
        }
        
        if (!maKhachHang) {
            $('select[name="PhieuSua.MaKhachHang"]').addClass('is-invalid');
            errorMessages.push('Vui lòng chọn khách hàng!');
            isValid = false;
        }
        
        if (!maNhanVien) {
            $('select[name="PhieuSua.MaNhanVien"]').addClass('is-invalid');
            errorMessages.push('Vui lòng chọn nhân viên!');
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            alert('Vui lòng kiểm tra lại các trường bắt buộc:\n' + errorMessages.join('\n'));
            return false;
        }
    });
    
    // Auto-hide error highlights when user starts typing/selecting
    $('input, select').on('input change', function() {
        $(this).removeClass('is-invalid');
    });

    // Validation cho ngày hẹn trả
    // Cập nhật min date cho ngày hẹn trả khi ngày sửa thay đổi
    $('input[name="PhieuSua.NgaySua"]').on('change', function() {
        var ngaySua = $(this).val();
        if (ngaySua) {
            // Set min date cho ngày hẹn trả = ngày sửa (có thể bằng)
            $('#ngayHenTra').attr('min', ngaySua);
            
            // Kiểm tra ngày hẹn trả hiện tại
            var ngayHenTraHienTai = $('#ngayHenTra').val();
            if (ngayHenTraHienTai && ngayHenTraHienTai < ngaySua) {
                $('#ngayHenTra').val('');
                alert('Ngày hẹn trả phải lớn hơn hoặc bằng ngày sửa!');
            }
        }
    });

    // Thêm validation cho ngày hẹn trả vào form validation
    $('#edit-form-@Model.PhieuSua.MaPhieuSua').on('submit', function(e) {
        var ngaySua = $('input[name="PhieuSua.NgaySua"]').val();
        var ngayHenTra = $('#ngayHenTra').val();
        
        if (ngayHenTra && ngayHenTra < ngaySua) {
            e.preventDefault();
            alert('Ngày hẹn trả phải lớn hơn hoặc bằng ngày sửa!');
            $('#ngayHenTra').focus();
            return false;
        }
    });
</script> 