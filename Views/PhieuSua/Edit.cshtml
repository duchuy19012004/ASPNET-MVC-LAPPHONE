            $("#dichvu-linhkien-list").append(newDvBlock);
            updateDichVuGia(); // C·∫≠p nh·∫≠t gi√° d·ªãch v·ª• m·ªõi
            updateLinhKienList(dvIdx); // Load linh ki·ªán cho d·ªãch v·ª• m·ªõi
