@model IEnumerable<phonev2.Models.PhieuSua>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var search = ViewBag.Search as string ?? "";
    var pageSize = ViewBag.PageSize ?? 10;
    var errorMessage = ViewBag.ErrorMessage as string;
    var khachHangList = ViewBag.KhachHangList as IEnumerable<SelectListItem>;
    var nhanVienList = ViewBag.NhanVienList as IEnumerable<SelectListItem>;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @errorMessage
    </div>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-primary text-center align-middle">
            <tr>
                <th class="text-center">Mã Phiếu</th>
                <th>Ngày Sửa</th>
                <th>Ngày Hẹn Trả</th>
                <th>Khách Hàng</th>
                <th>Nhân Viên</th>
                <th class="text-end">Tổng Tiền</th>
                <th class="text-center">Trạng Thái</th>
                <th class="text-center">Dịch Vụ</th>
                <th class="text-center">Linh Kiện</th>
                <th class="text-center">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="10" class="text-center text-danger">Không có dữ liệu hoặc đã xảy ra lỗi khi tải danh sách phiếu sửa.</td>
                </tr>
            }
            else if (!Model.Any())
            {
                <tr>
                    <td colspan="10" class="text-center">Không có phiếu sửa nào.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">@item.MaPhieuSua</td>
                        <td>
                            @(item.NgayGioHoanThanh?.ToString("dd/MM/yyyy HH:mm") ?? item.NgaySua.ToString("dd/MM/yyyy HH:mm"))
                        </td>
                        <td>
                            @if (item.TrangThai == phonev2.Models.TrangThaiPhieuSua.HoanThanh && item.NgayGioHoanThanh != null)
                            {
                                @item.NgayGioHoanThanh.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else if (item.NgayHenTra != null)
                            {
                                @item.NgayHenTra.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">Chưa có</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.TenKhachHang))
                            {
                                @item.TenKhachHang
                            }
                            else if (khachHangList != null)
                            {
                                var kh = khachHangList.FirstOrDefault(x => x.Value == item.MaKhachHang?.ToString());
                                @kh?.Text
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.TenNhanVien))
                            {
                                @item.TenNhanVien
                            }
                            else if (nhanVienList != null)
                            {
                                var nv = nhanVienList.FirstOrDefault(x => x.Value == item.MaNhanVien?.ToString());
                                @nv?.Text
                            }
                        </td>
                        <td class="text-end">
                            @{
                                decimal tongTienDichVu = 0;
                                decimal tongTienLinhKien = 0;
                                bool errorDichVu = false;
                                bool errorLinhKien = false;
                                
                                if (item.ChiTietPhieuSuas != null)
                                {
                                    foreach (var dv in item.ChiTietPhieuSuas)
                                    {
                                        if (dv.DichVu == null)
                                        {
                                            errorDichVu = true;
                                        }
                                        tongTienDichVu += (dv.DichVu?.GiaDichVu ?? 0);
                                    }
                                }
                                
                                if (item.ChiTietLinhKiens != null)
                                {
                                    foreach (var lk in item.ChiTietLinhKiens)
                                    {
                                        if (lk.LinhKien == null)
                                        {
                                            errorLinhKien = true;
                                        }
                                        tongTienLinhKien += (lk.LinhKien?.GiaBan ?? 0) * lk.SoLuong;
                                    }
                                }
                                
                                decimal tongTien = item.TongTien ?? (tongTienDichVu + tongTienLinhKien);
                            }
                            <div class="text-center">
                                <div class="fw-bold text-danger fs-6 mb-2">@tongTien.ToString("N0") VNĐ</div>
                                <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.MaPhieuSua" aria-expanded="false">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </button>
                                <div class="collapse mt-2" id="collapse-@item.MaPhieuSua">
                                    <div class="card card-body p-2" style="font-size: 0.8rem;">
                                        <div class="text-start">
                                            <span class="text-primary">Dịch vụ:</span>
                                            <span class="fw-bold">@tongTienDichVu.ToString("N0") VNĐ</span>
                                            @if (errorDichVu)
                                            {
                                                <span class="text-danger ms-1">(Lỗi dịch vụ)</span>
                                            }
                                            <br />
                                            <span class="text-success">Linh kiện:</span>
                                            <span class="fw-bold">@tongTienLinhKien.ToString("N0") VNĐ</span>
                                            @if (errorLinhKien)
                                            {
                                                <span class="text-danger ms-1">(Lỗi linh kiện)</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            @if (item.TrangThai == phonev2.Models.TrangThaiPhieuSua.TiepNhan)
                            {
                                <span class="badge bg-primary px-3 py-2"><i class="fas fa-clipboard-list"></i> Tiếp nhận</span>
                            }
                            else if (item.TrangThai == phonev2.Models.TrangThaiPhieuSua.DangSua)
                            {
                                <span class="badge bg-warning text-dark px-3 py-2"><i class="fas fa-tools"></i> Đang sửa</span>
                            }
                            else if (item.TrangThai == phonev2.Models.TrangThaiPhieuSua.HoanThanh)
                            {
                                <span class="badge bg-success px-3 py-2"><i class="fas fa-check-circle"></i> Hoàn thành</span>
                            }
                            else if (item.TrangThai == phonev2.Models.TrangThaiPhieuSua.Huy)
                            {
                                <span class="badge bg-danger px-3 py-2"><i class="fas fa-times-circle"></i> Hủy</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2"><i class="fas fa-question-circle"></i> Không xác định</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.ChiTietPhieuSuas != null && item.ChiTietPhieuSuas.Any())
                            {
                                foreach (var dv in item.ChiTietPhieuSuas)
                                {
                                    if (dv.DichVu != null)
                                    {
                                        <span class="badge bg-info text-dark me-1 mb-1"><i class="fas fa-tools"></i> @dv.DichVu.TenDichVu</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-light me-1 mb-1"><i class="fas fa-exclamation-circle"></i> Lỗi dịch vụ</span>
                                    }
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.ChiTietLinhKiens != null && item.ChiTietLinhKiens.Any())
                            {
                                foreach (var lk in item.ChiTietLinhKiens)
                                {
                                    if (lk.LinhKien != null)
                                    {
                                        <span class="badge bg-secondary me-1 mb-1"><i class="fas fa-microchip"></i> @lk.LinhKien.TenLinhKien (@lk.SoLuong)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-light me-1 mb-1"><i class="fas fa-exclamation-circle"></i> Lỗi linh kiện</span>
                                    }
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info btn-details-modal mx-1" title="Xem" data-url="@Url.Action("Details", new { id = item.MaPhieuSua })"><i class="fas fa-eye"></i></button>
                            <button type="button" class="btn btn-sm btn-warning btn-edit-modal mx-1" title="Sửa" data-url="@Url.Action("Edit", new { id = item.MaPhieuSua })"><i class="fas fa-edit"></i></button>
                            <button type="button" class="btn btn-sm btn-danger btn-delete-modal mx-1" title="Xóa" data-url="@Url.Action("Delete", new { id = item.MaPhieuSua })"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation" class="mt-3 d-flex justify-content-between align-items-center">
    <div>
        <label class="me-2">Hiển thị:</label>
        <form method="get" class="d-inline">
            <input type="hidden" name="search" value="@search" />
            <input type="hidden" name="sort" value="@ViewBag.Sort" />
            <input type="hidden" name="page" value="@currentPage" />
            <select name="pageSize" class="form-select d-inline-block w-auto" style="min-width: 80px;" onchange="this.form.submit()">
                @if (pageSize == 10) {<option value="10" selected>10</option>} else {<option value="10">10</option>}
                @if (pageSize == 20) {<option value="20" selected>20</option>} else {<option value="20">20</option>}
                @if (pageSize == 50) {<option value="50" selected>50</option>} else {<option value="50">50</option>}
                @if (pageSize == 100) {<option value="100" selected>100</option>} else {<option value="100">100</option>}
            </select>
        </form>
        <span class="ms-2">phiếu/sửa</span>
    </div>
    <ul class="pagination mb-0">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@search" asp-route-pageSize="@pageSize" asp-route-sort="@ViewBag.Sort">«</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@search" asp-route-pageSize="@pageSize" asp-route-sort="@ViewBag.Sort">@i</a>
            </li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@search" asp-route-pageSize="@pageSize" asp-route-sort="@ViewBag.Sort">»</a>
        </li>
    </ul>
</nav>