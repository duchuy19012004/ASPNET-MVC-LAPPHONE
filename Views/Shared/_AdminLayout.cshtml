    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/baocao.js" asp-append-version="true"></script>
    <script>
        // Sidebar Toggle Functionality
        $(document).ready(function() {
            const sidebar = $('#sidebar');
            const mainContent = $('#mainContent');
            const toggleBtn = $('#sidebarToggle');
            
            // Toggle sidebar
            toggleBtn.on('click', function() {
                sidebar.toggleClass('sidebar-collapsed');
                mainContent.toggleClass('content-expanded');
                
                // Change icon
                const icon = $(this).find('i');
                if (sidebar.hasClass('sidebar-collapsed')) {
                    icon.removeClass('fa-bars').addClass('fa-times');
                } else {
                    icon.removeClass('fa-times').addClass('fa-bars');
                }
            });
            
            // Close sidebar when clicking outside on mobile
            $(document).on('click', function(e) {
                if ($(window).width() < 768) {
                    if (!sidebar.is(e.target) && sidebar.has(e.target).length === 0 && 
                        !toggleBtn.is(e.target) && toggleBtn.has(e.target).length === 0) {
                        sidebar.addClass('sidebar-collapsed');
                        mainContent.addClass('content-expanded');
                        toggleBtn.find('i').removeClass('fa-bars').addClass('fa-times');
                    }
                }
            });
            
            // Auto-collapse on mobile
            function checkScreenSize() {
                if ($(window).width() < 768) {
                    sidebar.addClass('sidebar-collapsed');
                    mainContent.addClass('content-expanded');
                    toggleBtn.find('i').removeClass('fa-bars').addClass('fa-times');
                } else {
                    sidebar.removeClass('sidebar-collapsed');
                    mainContent.removeClass('content-expanded');
                    toggleBtn.find('i').removeClass('fa-times').addClass('fa-bars');
                }
            }
            
            // Check on page load and window resize
            checkScreenSize();
            $(window).resize(checkScreenSize);
            
            // Add smooth scroll for better UX
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 70
                    }, 300);
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
