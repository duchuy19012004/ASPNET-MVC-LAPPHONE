@model phonev2.Models.ThietBi

@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Thông tin chi tiết thiết bị #@Model.MaThietBi</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
        <a asp-action="Edit" asp-route-id="@Model.MaThietBi" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Chỉnh Sửa
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Thông tin thiết bị -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-microchip me-2"></i>
                    Thông Tin Thiết Bị
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold text-muted" style="width: 40%;">Tên thiết bị:</td>
                                <td class="fw-bold">@Model.TenThietBi</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-muted">Loại thiết bị:</td>
                                <td>@Model.LoaiThietBi</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.HangSanXuat))
                            {
                                <tr>
                                    <td class="fw-bold text-muted">Hãng sản xuất:</td>
                                    <td>@Model.HangSanXuat</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Model))
                            {
                                <tr>
                                    <td class="fw-bold text-muted">Model:</td>
                                    <td>@Model.Model</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.SoSerial))
                            {
                                <tr>
                                    <td class="fw-bold text-muted">Số Serial:</td>
                                    <td><code>@Model.SoSerial</code></td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center">
                            <i class="@Model.GetDeviceIcon() @Model.GetDeviceColor() mb-3" style="font-size: 4rem;"></i>
                            <h6>@Model.MoTaNgan</h6>
                            <span class="badge @(Model.HasCompleteInfo() ? "bg-success" : "bg-warning") fs-6">
                                @Model.GetCompletionStatus() thông tin hoàn thiện
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin khách hàng -->
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>
                    Thông Tin Khách Hàng
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold text-muted" style="width: 40%;">Họ và tên:</td>
                                <td class="fw-bold">@Model.KhachHang.HoTen</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-muted">Số điện thoại:</td>
                                <td>
                                    <a href="tel:@Model.KhachHang.SoDienThoai" class="text-decoration-none">
                                        <i class="fas fa-phone me-1 text-success"></i>
                                        @Model.KhachHang.SoDienThoai
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-muted">Hạng khách hàng:</td>
                                <td>
                                    <span class="badge @Model.KhachHang.GetCustomerLevelColor() border">
                                        @Model.KhachHang.GetCustomerLevel()
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="fw-bold text-muted">Địa chỉ:</label>
                            <div class="border rounded p-3 bg-light">
                                <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                                @Model.KhachHang.DiaChi
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Device Card -->
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="@Model.GetDeviceIcon() @Model.GetDeviceColor()" style="font-size: 5rem;"></i>
                </div>
                <h4 class="mb-2">@Model.TenThietBi</h4>
                <p class="text-muted mb-3">@Model.LoaiThietBi</p>
                
                <div class="mb-3">
                    <span class="badge @(Model.HasCompleteInfo() ? "bg-success" : "bg-warning") fs-6 px-3 py-2">
                        @Model.GetCompletionStatus() hoàn thiện
                    </span>
                </div>
                
                <div class="d-grid gap-2">
                    <a asp-controller="KhachHang" asp-action="Details" asp-route-id="@Model.MaKhachHang" class="btn btn-outline-info">
                        <i class="fas fa-user me-1"></i> Xem Khách Hàng
                    </a>
                </div>
            </div>
        </div>

        <!-- Actions Card -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Hành Động
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.MaThietBi" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Chỉnh Sửa Thông Tin
                    </a>
                    
                    <a href="#" class="btn btn-outline-success">
                        <i class="fas fa-wrench me-1"></i> Tạo Phiếu Sửa Chữa
                    </a>
                    
                    <a href="#" class="btn btn-outline-info">
                        <i class="fas fa-history me-1"></i> Lịch Sử Sửa Chữa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
    }
</style>