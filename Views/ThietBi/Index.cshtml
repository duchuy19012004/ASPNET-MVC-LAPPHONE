@model IEnumerable<phonev2.Models.ThietBi>
@{
    Layout = "_AdminLayout";
}

@section PageActions {
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm Thiết Bị
        </a>
    </div>
}

<!-- Search & Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Tìm kiếm</label>
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                           class="form-control" placeholder="Tên thiết bị, serial, khách hàng...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label">Loại thiết bị</label>
                <select name="deviceTypeFilter" class="form-select">
                    <option value="">Tất cả</option>
                    @foreach (var type in ViewBag.LoaiThietBis as List<string> ?? new List<string>())
                    {
                        <option value="@type" selected="@(ViewData["CurrentDeviceType"]?.ToString() == type)">
                            @type
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Hãng</label>
                <select name="brandFilter" class="form-select">
                    <option value="">Tất cả</option>
                    @foreach (var brand in ViewBag.HangSanXuats as List<string> ?? new List<string>())
                    {
                        <option value="@brand" selected="@(ViewData["CurrentBrand"]?.ToString() == brand)">
                            @brand
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Khách hàng</label>
                <select name="customerFilter" class="form-select">
                    <option value="">Tất cả khách hàng</option>
                    @foreach (var customer in ViewBag.KhachHangs as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>())
                    {
                        <option value="@customer.Value" selected="@(ViewData["CurrentCustomer"]?.ToString() == customer.Value)">
                            @customer.Text
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Sắp xếp</label>
                <select name="sortOrder" class="form-select">
                    <option value="">Tên A-Z</option>
                    <option value="name_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "name_desc")">Tên Z-A</option>
                    <option value="type" selected="@(ViewData["CurrentSort"]?.ToString() == "type")">Loại A-Z</option>
                    <option value="brand" selected="@(ViewData["CurrentSort"]?.ToString() == "brand")">Hãng A-Z</option>
                    <option value="customer" selected="@(ViewData["CurrentSort"]?.ToString() == "customer")">Khách hàng A-Z</option>
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Main Content -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Thiết bị</th>
                            <th>Khách hàng</th>
                            <th>Thông tin kỹ thuật</th>
                            <th>Tình trạng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="device-icon me-3">
                                            <i class="@item.GetDeviceIcon() @item.GetDeviceColor() fa-2x"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.TenThietBi</div>
                                            <small class="text-muted">@item.LoaiThietBi</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">@item.KhachHang.HoTen</div>
                                    <small class="text-muted">@item.KhachHang.SoDienThoai</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.HangSanXuat))
                                    {
                                        <div><strong>Hãng:</strong> @item.HangSanXuat</div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Model))
                                    {
                                        <div><strong>Model:</strong> @item.Model</div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.SoSerial))
                                    {
                                        <div><strong>Serial:</strong> @item.SoSerial</div>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(item.HasCompleteInfo() ? "bg-success" : "bg-warning")">
                                        @item.GetCompletionStatus() thông tin
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.MaThietBi" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MaThietBi" 
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaThietBi" 
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchString=@ViewData["CurrentFilter"]&deviceTypeFilter=@ViewData["CurrentDeviceType"]&brandFilter=@ViewData["CurrentBrand"]&customerFilter=@ViewData["CurrentCustomer"]&sortOrder=@ViewData["CurrentSort"]">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-mobile-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có thiết bị nào</h5>
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <p class="text-muted">Thử thay đổi từ khóa tìm kiếm</p>
                    <a asp-action="Index" class="btn btn-outline-secondary">Reset tìm kiếm</a>
                }
                else
                {
                    <p class="text-muted">Hãy thêm thiết bị đầu tiên</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Thêm Thiết Bị
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto submit filters
            $('select[name="deviceTypeFilter"], select[name="brandFilter"], select[name="customerFilter"], select[name="sortOrder"]').on('change', function() {
                $(this).closest('form').submit();
            });
        });
    </script>
}

<style>
    .device-icon {
        width: 50px;
        text-align: center;
    }
</style>