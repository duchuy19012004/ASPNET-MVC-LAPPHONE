@model phonev2.Models.ThietBi

@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        
        <p class="text-muted mb-0">Cập nhật thông tin thiết bị</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Sửa Thông Tin Thiết Bị
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="MaThietBi" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Khách hàng -->
                    <div class="mb-3">
                        <label asp-for="MaKhachHang" class="form-label required">Khách hàng</label>
                        <select asp-for="MaKhachHang" class="form-select" asp-items="ViewBag.KhachHangs">
                            <option value="">-- Chọn khách hàng --</option>
                        </select>
                        <span asp-validation-for="MaKhachHang" class="text-danger"></span>
                    </div>

                    <!-- Tên thiết bị -->
                    <div class="mb-3">
                        <label asp-for="TenThietBi" class="form-label required">Tên thiết bị</label>
                        <input asp-for="TenThietBi" class="form-control" placeholder="VD: iPhone 13 Pro Max" />
                        <span asp-validation-for="TenThietBi" class="text-danger"></span>
                    </div>

                    <!-- Loại thiết bị -->
                    <div class="mb-3">
                        <label asp-for="LoaiThietBi" class="form-label required">Loại thiết bị</label>
                        <input asp-for="LoaiThietBi" class="form-control" placeholder="VD: Điện thoại, Laptop, Tablet" />
                        <span asp-validation-for="LoaiThietBi" class="text-danger"></span>
                    </div>

                    <!-- Hãng sản xuất -->
                    <div class="mb-3">
                        <label asp-for="HangSanXuat" class="form-label">Hãng sản xuất</label>
                        <input asp-for="HangSanXuat" class="form-control" placeholder="VD: Apple, Samsung, Dell" />
                        <span asp-validation-for="HangSanXuat" class="text-danger"></span>
                    </div>

                    <!-- Model -->
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label">Model</label>
                        <input asp-for="Model" class="form-control" placeholder="VD: Pro Max, XPS 13" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <!-- Số Serial -->
                    <div class="mb-3">
                        <label asp-for="SoSerial" class="form-label">Số Serial</label>
                        <input asp-for="SoSerial" class="form-control" placeholder="Số serial của thiết bị" />
                        <span asp-validation-for="SoSerial" class="text-danger"></span>
                        <div class="form-text">Để trống nếu không có hoặc chưa biết</div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                            <i class="fas fa-times me-1"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-1"></i> Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Info Card -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Hướng dẫn
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-star text-warning me-2"></i>
                        <strong>Bắt buộc:</strong> Khách hàng, Tên thiết bị, Loại thiết bị
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-lightbulb text-info me-2"></i>
                        <strong>Tùy chọn:</strong> Hãng, Model, Số Serial
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        Số Serial phải duy nhất trong hệ thống
                    </li>
                    <li>
                        <i class="fas fa-save text-primary me-2"></i>
                        Nhấn "Cập nhật" để lưu thay đổi
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}