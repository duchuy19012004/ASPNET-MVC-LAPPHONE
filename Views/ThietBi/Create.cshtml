@model phonev2.Models.ThietBi

@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Thêm thiết bị mới vào hệ thống</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Thông Tin Thiết Bị
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Khách hàng -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="MaKhachHang" class="form-label required"></label>
                            <select asp-for="MaKhachHang" class="form-select" asp-items="ViewBag.KhachHangs">
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                            <span asp-validation-for="MaKhachHang" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Thông tin cơ bản -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="TenThietBi" class="form-label required"></label>
                            <input asp-for="TenThietBi" class="form-control" placeholder="VD: iPhone 13 Pro Max" />
                            <span asp-validation-for="TenThietBi" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LoaiThietBi" class="form-label required"></label>
                            <input asp-for="LoaiThietBi" class="form-control" placeholder="VD: Điện thoại" list="loaiThietBiList" />
                            <datalist id="loaiThietBiList">
                                <option value="Điện thoại"></option>
                                <option value="Laptop"></option>
                                <option value="Tablet"></option>
                                <option value="Đồng hồ thông minh"></option>
                                <option value="Tai nghe"></option>
                                <option value="Camera"></option>
                                <option value="Máy tính để bàn"></option>
                                <option value="Tivi"></option>
                            </datalist>
                            <span asp-validation-for="LoaiThietBi" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Thông tin kỹ thuật -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="HangSanXuat" class="form-label"></label>
                            <input asp-for="HangSanXuat" class="form-control" placeholder="VD: Apple" list="hangSanXuatList" />
                            <datalist id="hangSanXuatList">
                                <option value="Apple"></option>
                                <option value="Samsung"></option>
                                <option value="Xiaomi"></option>
                                <option value="Oppo"></option>
                                <option value="Vivo"></option>
                                <option value="Dell"></option>
                                <option value="HP"></option>
                                <option value="Asus"></option>
                                <option value="Lenovo"></option>
                                <option value="Sony"></option>
                            </datalist>
                            <span asp-validation-for="HangSanXuat" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="VD: A2643" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="SoSerial" class="form-label"></label>
                            <input asp-for="SoSerial" class="form-control" placeholder="VD: G6QT12345678" />
                            <span asp-validation-for="SoSerial" class="text-danger"></span>
                            <div class="form-text">Số serial duy nhất của thiết bị (nếu có)</div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                            <i class="fas fa-times me-1"></i> Hủy Bỏ
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-1"></i> Lưu Thiết Bị
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Hướng Dẫn
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <strong>Bắt buộc:</strong> Khách hàng, tên thiết bị, loại thiết bị
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-info text-info me-2"></i>
                        <strong>Tùy chọn:</strong> Hãng, model, số serial
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        Số serial giúp định danh thiết bị chính xác
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-search text-secondary me-2"></i>
                        Có thể tìm kiếm thiết bị theo mọi thông tin
                    </li>
                </ul>
            </div>
        </div>

        <!-- Common Device Types -->
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Loại Thiết Bị Phổ Biến
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-2">
                        <i class="fas fa-mobile-alt text-primary fa-2x mb-1"></i>
                        <br><small>Điện thoại</small>
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fas fa-laptop text-success fa-2x mb-1"></i>
                        <br><small>Laptop</small>
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fas fa-tablet-alt text-info fa-2x mb-1"></i>
                        <br><small>Tablet</small>
                    </div>
                    <div class="col-6 mb-2">
                        <i class="fas fa-clock text-warning fa-2x mb-1"></i>
                        <br><small>Đồng hồ</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .required::after {
        content: " *";
        color: red;
    }
</style>