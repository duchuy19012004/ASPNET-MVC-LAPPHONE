@model phonev2.Models.DichVu
<div class="modal-header bg-info text-white">
    <h5 class="modal-title">
        <i class="fas fa-tools me-2"></i>
        Chi Tiết Dịch Vụ
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row mb-3">
        <div class="col-md-8">
            <h6 class="text-primary mb-1">@Model.TenDichVu</h6>
            <small class="text-muted">Mã: #@Model.MaDichVu</small>
        </div>
        <div class="col-md-4 text-end">
            <span class="badge @(Model.TrangThai ? "bg-success" : "bg-secondary")">
                @Model.TrangThaiText
            </span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="text-center p-2 bg-light rounded">
                <h6 class="text-success mb-1">@Model.GiaDichVuText</h6>
                <small class="text-muted">Giá dịch vụ</small>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-center p-2 bg-light rounded">
                <h6 class="text-warning mb-1">
                    @if (Model.ThoiGianSua.HasValue)
                    {
                        @Model.ThoiGianSua @:phút
                    }
                    else
                    {
                        <em>Chưa xác định</em>
                    }
                </h6>
                <small class="text-muted">Thời gian thực hiện</small>
            </div>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.MoTa))
    {
        <div class="mb-3">
            <h6 class="text-muted mb-2">
                <i class="fas fa-align-left me-1"></i>Mô Tả Chi Tiết
            </h6>
            <div class="bg-light p-2 rounded">
                <small>@Model.MoTa</small>
            </div>
        </div>
    }
    <div class="row text-muted">
        <div class="col-md-6">
            <small>
                <i class="fas fa-calendar me-1"></i>
                Tạo: @(Model.NgayTao != null ? Model.NgayTao.ToString("dd/MM/yyyy") : "")
            </small>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="btn-group w-100">
        <button type="button" class="btn btn-outline-warning" onclick="openDichVuModal('edit', @Model.MaDichVu)">
            <i class="fas fa-edit me-1"></i>Sửa
        </button>
        <button type="button" class="btn btn-outline-danger" onclick="openDeleteDichVuModal('@Model.MaDichVu')">
            <i class="fas fa-trash me-1"></i>Xóa
        </button>
    </div>
</div> 