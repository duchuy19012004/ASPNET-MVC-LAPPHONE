@model phonev2.Models.KhachHang
<div class="modal-header bg-warning text-dark">
    <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Cập nhật khách hàng</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
</div>
<div class="modal-body p-4">
    <form id="quickEditKhachHangForm">
        <input type="hidden" asp-for="MaKhachHang" />
        <div class="mb-3">
            <label asp-for="HoTen" class="form-label fw-bold"><i class="fas fa-user me-1 text-primary"></i>Họ và tên <span class="text-danger">*</span></label>
            <input asp-for="HoTen" class="form-control form-control-lg" placeholder="Nhập họ tên khách hàng" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SoDienThoai" class="form-label fw-bold"><i class="fas fa-phone me-1 text-success"></i>Số điện thoại <span class="text-danger">*</span></label>
            <input asp-for="SoDienThoai" class="form-control form-control-lg" placeholder="Nhập số điện thoại" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label fw-bold"><i class="fas fa-map-marker-alt me-1 text-info"></i>Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ (nếu có)" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-warning btn-lg px-4"><i class="fas fa-save me-1"></i>Cập nhật khách hàng</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 